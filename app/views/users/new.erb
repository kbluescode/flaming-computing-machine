<form action="/users/new" method="post">
  <div class="form-group">
    <label>Username:</label>
    <input type="text" class="form-control" name="username" placeholder="Username" value="<%= @user.user_name %>">
  </div>
 
  <div class="form-group">
    <label>Email:</label>
    <input type="text" class="form-control" name="email" placeholder="Email"  value="<%= @user.email %>">
  </div>

  <div class="form-group">
    <label>Password:</label>
    <input type="password" class="form-control" name="password" placeholder="Password" value="<%= @user.password %>">
  </div> 
  <input class="btn-block" type="submit" value="Submit">
</form>
